
using System;

namespace MyApplication
{


    class brickscalculation
    {
        static float Bricksize;
        static double NumberBrickHeight;
        static double NumberBrickThickness;
        static double NumberBrickLenght;
        static double NumberBrickWall;


        static void Calculations()
        {
            Console.WriteLine("please choose your brick size:\n1.pressed brick1\n2.pressed brick2\n3.3cm brick1\n 4.3cm brick 2\n5.3cm brick3\n6.brick military1\n7.brick military2\n8.brick roof");
            Bricksize = float.Parse(Console.ReadLine());

            Console.WriteLine("wrong option selected.\n by");


        }

    }

    private static void Main(string[] args)
    {
        InitsizeBrick();
        Wall();
        Calculations();
        Console.WriteLine(NumberBrickWall);
    }



}
public class Wall
{
    static double WallHeight;
    static double WallLenght;
    static double Wallthickness;

    static void Wall()
    {

        Console.WriteLine("enter your wall height: ");
        WallHeight = float.Parse(Console.ReadLine());
        Console.WriteLine("enter your wall thickness: ");
        Wallthickness = float.Parse(Console.ReadLine());
        Console.WriteLine("enter your wall Lenght‚Äç   : ");
        WallLenght = float.Parse(Console.ReadLine());

    }

}
public class Brick1
{
    static int[] PressedBrick1;
    PressedBrick1 = new int[] { 5, 10, 20 };
     if (Wallthickness<PressedBrick1[1])
                    {
                        Console.WriteLine("Wallthickness is not standard.");
                    }
                    else
                    {
                        NumberBrickHeight = WallHeight / PressedBrick1[0];
                        NumberBrickThickness = Wallthickness / PressedBrick1[1];
                        NumberBrickLenght = WallLenght / PressedBrick1[2];
                        NumberBrickWall = NumberBrickHeight* NumberBrickLenght * NumberBrickThickness;
                    }

}
public class Brick2
{
    static double[] PressedBrick2;
    if (Wallthickness<PressedBrick2[1])
                    {
                        Console.WriteLine("Wallthickness is not standard.");
                    }
                    else
                    {
                        NumberBrickHeight = WallHeight / PressedBrick2[0];
                        NumberBrickThickness = Wallthickness / PressedBrick2[1];
                        NumberBrickLenght = WallLenght / PressedBrick2[2];
                        NumberBrickWall = NumberBrickHeight* NumberBrickLenght * NumberBrickThickness;
                    }
    
}
